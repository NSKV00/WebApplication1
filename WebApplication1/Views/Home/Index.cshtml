}
<link href="./css/home.css" rel="stylesheet" />

<body>

    <div id="particles-js"></div>

    <!-- Conteúdo com efeito de vidro -->
    <div class="content">
        <h1>Bem-Vindo ao Sistema de Exercícios</h1>
        <p style="color: #ffffff;">Escolha uma opção:</p>

        <div class="btnT">
            <div class="btn1">
                <button>
                    <a href="/Produto" class="btn">Produto</a>
                </button>
        
                <button>
                    <a href="/Aluno" class="btn">Aluno</a>
                </button>
        
                <button>
                    <a href="/Carro" class="btn">Carro</a>
                </button>
            </div>

            <div class="btn2">
                <button>
                    <a href="/Curso" class="btn">Curso</a>
                </button>
        
                <button>
                    <a href="/Filme" class="btn">Filme</a>
                </button>

                <button>
                    <a href="/Livro" class="btn">Livro</a>
                </button>
            </div>
        </div>

    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>

<script>

    particlesJS("particles-js", {
    "particles": {
      "number": {
        "value": 390,
        "density": { "enable": true, "value_area": 1000 }
      },
      "color": { "value": "#ffffff" },
      "shape": { "type": "circle" },
      "opacity": {
        "value": 0.3,
        "random": true
      },
      "size": {
        "value": 3,
        "random": true
      },
      "line_linked": { "enable": false },
      "move": {
        "enable": true,
        "speed": 0.6,
        "direction": "top",
        "random": true,
        "out_mode": "out"
      }
    },
    "interactivity": {
      "detect_on": "canvas",
      "events": {
        "onhover": { "enable": false },
        "onclick": { "enable": false },
        "resize": true
      }
    },
    "retina_detect": true
  });

</script>